    </head>
    <body>
        <h1>My todo List</h1>

        <div id="todo-table"> 

            <form action="">
                
                <input type="text" name="item" placeholder="Add your todoes...." required>
                
                <button type="submit">Add Item</button>
        </form>
        <ul>
  
 <% todos.map(todo => { %>
<li><%= todo.item %></li>

<% }) %>



</ul>

</div>

<script type="text/javascript" src="assets/todo-list.js"></script>
</body>
</html>